@model IEnumerable<Eclipse.Models.Chamado>

@{
    ViewData["Title"] = "Gerenciar Chamados";
}
    <!-- Main Content -->
    <div class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="page-title">Gerenciar Chamados</h1>
                    <p class="page-subtitle">Visualize e gerencie todos os chamados de suporte do sistema</p>
                </div>
            </div>

            <div class="content-card glass-effect">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="mb-0">Lista de Chamados</h3>
                   

                <p>

                    <a class="btn btn-purple" asp-action="Create">
                        <i class="fas fa-plus-circle me-2"></i>
                        Novo Chamado
                    </a>

                    <a class="btn btn-purple" asp-action="ExportExcel">
                        <i class="fas fa-plus-circle me-2"></i>
                        Exportar para o Excel
                    </a>
                    <a class="btn btn-purple" asp-action="ExportPdf">
                        <i class="fas fa-plus-circle me-2"></i>
                        Exportar pdf

                    </a>
                </p>


                </div>

                <div class="table-container">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Descrição</th>
                                <th>Status</th>
                                <th>Data de Criação</th>
                                <th>Última Atualização</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                                    <td>
                                        @{
                                            var descricao = item.Descricao;
                                            if (descricao.Length > 50) {
                                                descricao = descricao.Substring(0, 50) + "...";
                                            }
                                        }
                                        @descricao
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = "status-aberto";
                                            if (item.Status?.ToLower() == "em andamento") {
                                                statusClass = "status-andamento";
                                            }
                                            else if (item.Status?.ToLower() == "fechado" || item.Status?.ToLower() == "resolvido") {
                                                statusClass = "status-fechado";
                                            }
                                        }
                                        <span class="status-badge @statusClass">@Html.DisplayFor(modelItem => item.Status)</span>
                                    </td>
                                <td>@Html.DisplayFor(modelItem => item.DataCriacaoString)</td>
                                <td>@Html.DisplayFor(modelItem => item.DataAtualizacaoString)</td>
                                    <td class="action-links">
                                        <a asp-action="Edit" asp-route-id="@item.ChamadoId" title="Editar">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ChamadoId" title="Detalhes">
                                            <i class="fas fa-eye"></i> Detalhes
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ChamadoId" title="Excluir" class="text-danger">
                                            <i class="fas fa-trash"></i> Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any()) {
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x mb-3" style="color: var(--light-purple);"></i>
                        <h4>Nenhum chamado encontrado</h4>
                        <p class="text-white">Comece criando seu primeiro chamado de suporte</p>
                        <a class="btn btn-purple mt-2" asp-action="Create">
                            <i class="fas fa-plus-circle me-2"></i>
                            Criar Primeiro Chamado
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Add some interactivity to the table rows
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('.custom-table tbody tr');

            tableRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    // Don't trigger if clicking on action links
                    if (!e.target.closest('.action-links')) {
                        this.style.transform = 'scale(1.02)';
                        setTimeout(() => {
                            this.style.transform = '';
                        }, 200);
                    }
                });
            });
        });
    </script>
@model Eclipse.Models.Feedback

@{
    ViewData["Title"] = "Excluir Feedback";
}

<link href="~/css/Feedbacks/create_del.css" rel="stylesheet" />

<div class="main-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="content-card glass-effect">
                    <div class="d-flex align-items-center mb-4">
                        <a asp-action="Index" class="btn-back me-3">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <h1 class="page-title mb-0 text-danger">Excluir Feedback</h1>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-3 fa-lg"></i>
                            <div>
                                <h4 class="alert-heading mb-2">Atenção!</h4>
                                <p class="mb-0">Esta ação não pode ser desfeita. Tem certeza que deseja excluir este feedback?</p>
                            </div>
                        </div>
                    </div>

                    <div class="feedback-details">
                        <div class="detail-section">
                            <h4 class="detail-title">Informações do Feedback</h4>

                            <div class="detail-item">
                                <span class="detail-label">Avaliação</span>
                                <div class="rating-display">
                                    @for (int i = 1; i <= 5; i++) {
                                        <i class="fas fa-star @(i <= Model.Nota ? "active" : "")"></i>
                                    }
                                    <span class="rating-text">(@Model.Nota/5)</span>
                                </div>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">Comentário</span>
                                <span class="detail-value detail-comment">@(string.IsNullOrEmpty(Model.Comentario) ? "Sem comentário" : Model.Comentario)</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">ID do Feedback</span>
                                <span class="detail-value">@Model.FeedbackId</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="delete-form mt-4">
                        <input type="hidden" asp-for="FeedbackId" />

                        <div class="form-actions">
                            <button type="submit" class="btn-delete">
                                <i class="fas fa-trash me-2"></i>
                                Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn-cancel">
                                <i class="fas fa-times me-2"></i>
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
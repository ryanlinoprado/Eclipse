@model IEnumerable<Eclipse.Models.Feedback>

@{
    ViewData["Title"] = "Gerenciar Feedbacks";
}

<link href="~/css/feedbacks/Feedback.css" rel="stylesheet" />

<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="page-title">Feedbacks dos Usuários</h1>
                    <p>
                    <a asp-action="Create" class="btn btn-purple">
                        <i class="fas fa-plus-circle me-2"></i>
                        Novo Feedback
                    </a>

                    <a class="btn btn-purple" asp-action="ExportExcel">
                        <i class="fas fa-plus-circle me-2"></i>
                        Exportar para o Excel
                    </a>
                    <a class="btn btn-purple" asp-action="ExportPdf">
                        <i class="fas fa-plus-circle me-2"></i>
                        Exportar pdf

                    </a>
                    </p>

                </div>

                <div class="content-card glass-effect">
                    <div class="table-container">
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th>Avaliação</th>
                                    <th>Comentário</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            <div class="rating-display">
                                                @for (int i = 1; i <= 5; i++) {
                                                    <i class="fas fa-star @(i <= item.Nota ? "active" : "")"></i>
                                                }
                                                <span class="rating-text">(@item.Nota/5)</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="comment-preview">
                                                @if (!string.IsNullOrEmpty(item.Comentario)) {
                                                    if (item.Comentario.Length > 100) {
                                                        @item.Comentario.Substring(0, 100)
                                            
                                                        <text>...</text>
                                                    }
                                                    else {
                                                        @item.Comentario
                                                    }
                                                }
                                                else {
                                                    <span class="text-muted">Sem comentário</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn-action btn-view" title="Detalhes">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn-action btn-edit" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn-action btn-delete" title="Excluir">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (!Model.Any()) {
                            <div class="text-center py-5">
                                <i class="fas fa-comments fa-3x mb-3 text-muted"></i>
                                <h4 class="text-muted">Nenhum feedback encontrado</h4>
                                <p class="text-muted">Comece adicionando o primeiro feedback</p>
                                <a asp-action="Create" class="btn btn-purple mt-2">
                                    <i class="fas fa-plus-circle me-2"></i>
                                    Adicionar Primeiro Feedback
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

